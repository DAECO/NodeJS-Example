doctype html
html
  head
    meta(charset='utf-8')
  body
    if user
      h1 Hello, #{user.displayName}!
    else
      h1 Hello, World!
    ul#account
      if user
        li
          a(href='/auth/logout') Logout
      else
        li
          a(href='/auth/login') Login
        li
          a(href='/auth/register') Register
      h2
        a(href='/topic') Server Side Javascript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    block content
